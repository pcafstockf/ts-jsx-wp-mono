{
	"name": "ts-wb-mono",
	"description": "Sample TypeScript/Webpack/Monorepo",
	"version": "1.0.0",
	"author": "Frank Stock",
	"license": "MIT",
	"scripts": {
		"build": "npm run build:hello-node && npm run build:hello-browser",
		"start:hello-browser": "cross-env NODE_ENV=development webpack-dev-server --config=./apps/hello-browser/webpack.config.js",
		"build:hello-browser": "cross-env NODE_ENV=production webpack --config=./apps/hello-browser/webpack.config.js",
		"test:hello-browser": "karma start apps/hello-browser/karma.conf.js",
		"start:hello-node": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register --transpile-only --project apps/hello-node/tsconfig.json apps/hello-node/src/main.ts",
		"build:hello-node": "cross-env NODE_ENV=production webpack --config=./apps/hello-node/webpack.config.js",
		"test:hello-node": "node --require source-map-support/register --require ts-node/register/transpile-only --require tsconfig-paths/register  ./node_modules/jasmine/bin/jasmine.js --config=apps/hello-node/jasmine.json"
	},
	"keywords": [
		"typescript",
		"webpack",
		"monorepo",
		"sample"
	],
	"dependencies": {
		"tslib": "~2.3.1"
	},
	"devDependencies": {
		"@types/jasmine": "~3.10.2",
		"@types/node": "~16.11.12",
		"copy-webpack-plugin": "~10.0.0",
		"cross-env": "~7.0.3",
		"css-loader": "~6.5.1",
		"html-webpack-plugin": "~5.5.0",
		"jasmine": "~3.10.0",
		"jasmine-core": "~3.10.1",
		"jasmine-ts-console-reporter": "~3.1.1",
		"karma": "~6.3.9",
		"karma-chrome-launcher": "~3.1.0",
		"karma-jasmine": "~4.0.1",
		"karma-jasmine-html-reporter": "~1.7.0",
		"karma-spec-reporter": "0.0.32",
		"karma-webpack": "~5.0.0",
		"mini-css-extract-plugin": "~2.4.5",
		"node-sass": "~6.0.1",
		"sass-loader": "~12.4.0",
		"source-map-loader": "~3.0.0",
		"source-map-support": "~0.5.21",
		"style-loader": "~3.3.1",
		"terser-webpack-plugin": "~5.2.5",
		"ts-loader": "~9.2.6",
		"ts-node": "~10.4.0",
		"tsconfig-paths": "~3.12.0",
		"tsconfig-paths-webpack-plugin": "~3.5.2",
		"typescript": "~4.5.2",
		"webpack": "~5.65.0",
		"webpack-cli": "~4.9.1",
		"webpack-dev-server": "~4.6.0",
		"webpack-manifest-plugin": "~4.0.2",
		"webpack-merge": "~5.8.0"
	}
}
