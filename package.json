{
	"name": "ts-wb-mono",
	"description": "Sample TypeScript/Webpack/Monorepo",
	"version": "1.0.0",
	"author": "Frank Stock",
	"license": "MIT",
	"scripts": {
		"build": "npm run build:hello-node && npm run build:hello-browser",
		"start:hello-browser": "cross-env NODE_ENV=development webpack-dev-server --config=./apps/hello-browser/webpack.config.js",
		"build:hello-browser": "cross-env NODE_ENV=production webpack --config=./apps/hello-browser/webpack.config.js",
		"test:hello-browser": "karma start apps/hello-browser/karma.conf.js",
		"start:hello-node": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register --transpile-only --project apps/hello-node/tsconfig.json apps/hello-node/src/main.ts",
		"build:hello-node": "cross-env NODE_ENV=production webpack --config=./apps/hello-node/webpack.config.js",
		"test:hello-node": "node --require source-map-support/register --require ts-node/register/transpile-only --require tsconfig-paths/register  ./node_modules/jasmine/bin/jasmine.js --config=apps/hello-node/jasmine.json"
	},
	"keywords": [
		"typescript",
		"webpack",
		"monorepo",
		"react",
		"JSX",
		"sample"
	],
	"dependencies": {
		"react": "~17.0.2",
		"react-dom": "~17.0.2",
		"react-router-dom": "~6.22.3",
		"tslib": "~2.6.2",
		"web-vitals": "~3.5.2"
	},
	"devDependencies": {
		"@types/jasmine": "~5.1.4",
		"@types/node": "~18.19.25",
		"@types/react": "~17.0.79",
		"@types/react-dom": "~17.0.25",
		"copy-webpack-plugin": "~12.0.2",
		"cross-env": "~7.0.3",
		"css-loader": "~6.10.0",
		"html-webpack-plugin": "~5.6.0",
		"jasmine": "~5.1.0",
		"jasmine-core": "~5.1.2",
		"jasmine-ts-console-reporter": "~3.1.1",
		"karma": "~6.4.3",
		"karma-chrome-launcher": "~3.2.0",
		"karma-jasmine": "~5.1.0",
		"karma-jasmine-html-reporter": "~2.1.0",
		"karma-spec-reporter": "0.0.36",
		"karma-webpack": "~5.0.1",
		"mini-css-extract-plugin": "~2.8.1",
		"node-sass": "~9.0.0",
		"sass-loader": "~14.1.1",
		"source-map-loader": "~5.0.0",
		"source-map-support": "~0.5.21",
		"style-loader": "~3.3.4",
		"terser-webpack-plugin": "~5.3.10",
		"ts-loader": "~9.5.1",
		"ts-node": "~10.9.2",
		"tsconfig-paths": "~4.2.0",
		"tsconfig-paths-webpack-plugin": "~4.1.0",
		"typescript": "~5.4.2",
		"webpack": "~5.90.3",
		"webpack-cli": "~5.1.4",
		"webpack-dev-server": "~5.0.3",
		"webpack-manifest-plugin": "~5.0.0",
		"webpack-merge": "~5.10.0"
	}
}
